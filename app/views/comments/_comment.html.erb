<p>
  <strong>Commenter:</strong>
  <%= comment.commenter %>
</p>
 
<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>

<% if author_signed_in? %>
  <p>
    <%= link_to 'Destroy Comment', [comment.article, comment],
	            method: :delete,
	            data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>